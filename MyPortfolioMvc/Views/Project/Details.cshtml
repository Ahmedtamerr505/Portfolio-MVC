@model MyPortfolioMvc.Models.Project

<h1>@Model.Title</h1>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Technologies Used:</strong> @Model.TechnologiesUsed</p>

@if (!string.IsNullOrEmpty(Model.ProjectURL))
{
    <p><strong>Project URL:</strong> <a href="@Model.ProjectURL" target="_blank">@Model.ProjectURL</a></p>
}

@if (!string.IsNullOrEmpty(Model.ImageURL))
{
    <h3>Project Image:</h3>
    <!-- Use Url.Content to generate the correct path -->
    <img src="@Url.Content("~/" + Model.ImageURL)" alt="@Model.Title" style="max-width:100%; height:auto;" />
}