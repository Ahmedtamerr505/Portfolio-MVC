<div class="skills-container position-fixed">
    <h1 class="skills-title">Skills</h1>

    <table class="skills-table">
        <thead>
            <tr>
                <th>Skill Name</th>
                <th>Proficiency Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model)
            {
                <tr>
                    <td>@skill.SkillName</td>
                    <td>@skill.ProficiencyLevel</td>
                    <td><a href="#" class="skill-action-link">Learn More</a></td> <!-- Optional action -->
