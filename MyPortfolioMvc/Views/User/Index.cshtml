@model IEnumerable<MyPortfolioMvc.Models.User>

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>