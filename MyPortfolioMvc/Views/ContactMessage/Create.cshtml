<div class="contact-container position-fixed">
    <h1 class="contact-title">Send a Message</h1>
    <form asp-action="Create" asp-controller="ContactMessage" method="post" class="contact-form">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control" value="@Model?.Name" placeholder="Your full name" required />
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" name="Email" class="form-control" value="@Model?.Email" placeholder="Your email address" required />
        </div>
        <div class="form-group">
            <label for="Message">Message:</label>
            <textarea name="Message" class="form-control" rows="5" placeholder="Write your message here" required>@Model?.Message</textarea>
        </div>
        <button type="submit" class="btn-submit">Submit</button>
    </form>
</div>
